@model List<Ticket>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    Layout = null; 
}
<!DOCTYPE html>
<html>

<head>
    <title>Pishant's Tickets</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/css/viewticket.css">
</head>

<body>
    <div class="container">
        <h1>My Tickets</h1>
        <table>
            <thead>
                <tr>
                    <th>Ticket ID</th>
                    <th>Date of Cuting </th>
                    <th>Status</th>

                </tr>
            </thead>
            <tbody>
                @{
                    if (Model.Count >= 1 && Model.First().Note!=null )
                    {
                        
                 
                       foreach(var t in Model)
                       {
                        <tr>
                        <td>@t.Id</td>
                                <td>@t.D_ofTic.ToString("yyyy-MM-dd HH:mm:ss")</td>
                                <td>@(t.Status == true ? "Done" : "Not Progress")</td>
                            </tr>
                       }
                    }
                    else
                    {
                       
                        <tr >
                        <td colspan="3" style="color : mediumvioletred">You Have No Ticket </td>
                       </tr>
                    }
                }

            </tbody>
        </table>
     
     
         <button> <a asp-controller="Patient" asp-action="actionResult" asp-route-P_ID="@Model.First().P_id">Back</a></button>

    </div>
</body>

</html>