@model User
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="form.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <link rel="stylesheet" href="~/css/form.css">

</head>

<body>
    <div class="con">
        <div class="login-card">
            <div class="header">
                <div class="log">Login</div>
            </div>
            <form method="post"> 
                <div class="group">
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" type="text" placeholder="username">
                    <span style="color : red" asp-validation-for="Email"></span>
                </div>
                <div class="group">
                    <label asp-for="Password">Password:</label>
                    <input asp-for="Password"   type="password" placeholder="*********">
                    <span style="color : red" asp-validation-for="Password"></span>
                </div>
                <div class="group">
                    <input value="Login" type="submit">
                </div>
            </form>
        </div>
    </div>
</body>

</html>